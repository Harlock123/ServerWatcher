<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ServerWatcher.ViewModels"
        xmlns:models="using:ServerWatcher.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="ServerWatcher.Views.FileBrowserWindow"
        x:DataType="vm:FileBrowserViewModel"
        Title="Remote File Browser"
        Width="700" Height="500">

    <Design.DataContext>
        <vm:FileBrowserViewModel/>
    </Design.DataContext>

    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="{Binding ServerName, StringFormat='Server: {0}'}"
                       FontSize="18"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding Path, StringFormat='Path: {0}'}"
                       FontSize="14"
                       Foreground="#666666"/>
            <TextBlock Text="{Binding StatusText}"
                       FontStyle="Italic"
                       Foreground="#666666"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Padding="30,10"
                    FontSize="14"/>
        </StackPanel>

        <Border BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Files}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:RemoteFileInfo">
                            <Border BorderBrush="#EEEEEE"
                                    BorderThickness="0,0,0,1"
                                    Padding="10,8"
                                    Margin="0,2">
                                <Grid ColumnDefinitions="30,*,180,120">
                                    <TextBlock Grid.Column="0"
                                               Text="[DIR]"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="#0066CC"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding IsDirectory}"/>

                                    <TextBlock Grid.Column="0"
                                               Text="[FILE]"
                                               FontSize="12"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding !IsDirectory}"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               FontSize="13"
                                               Margin="10,0,0,0"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ModifiedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#666666"
                                               HorizontalAlignment="Right"/>

                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Size, StringFormat='{}{0:N0} bytes'}"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#666666"
                                               HorizontalAlignment="Right"
                                               Margin="10,0,0,0"
                                               IsVisible="{Binding !IsDirectory}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
